<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1762388249438-1" author="younes">
        <createTable tableName="customer">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_customer"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="update_at" type="DATETIME"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="country" type="VARCHAR(255)"/>
            <column name="street" type="VARCHAR(255)"/>
            <column name="postal_code" type="VARCHAR(255)"/>
            <column name="lon" type="DOUBLE"/>
            <column name="lat" type="DOUBLE"/>
            <column name="start" type="DATETIME"/>
            <column name="end" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1762388249438-2" author="younes">
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="warehouse" columnName="word" />
        </preConditions>
        <dropColumn columnName="word" tableName="warehouse"/>
    </changeSet>

</databaseChangeLog>