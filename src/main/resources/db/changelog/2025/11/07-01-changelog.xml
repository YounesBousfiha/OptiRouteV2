<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1762505923090-1" author="younes">
        <createTable tableName="delivery_history">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_delivery_history"/>
            </column>
            <column name="delivery_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="planned_delivery_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="actual_delivery_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="delay_in_minutes" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="day_of_week" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>